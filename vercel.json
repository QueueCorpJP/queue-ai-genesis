{
  "rewrites": [
    {
      "source": "/",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i).*(bot|crawler|spider|bing|google|duckduckbot|baidu|yandex|facebookexternalhit|twitterbot|linkedinbot|embedly|quora|slackbot|vkshare|w3c_validator|redditbot|applebot|whatsapp|telegrambot|googlebot|gptbot|perplexity|claudebot|anthropic-ai|ccbot).*"
        }
      ],
      "destination": "/prerender/index.html"
    },
    {
      "source": "/(about|company|careers|contact|consultation|terms|privacy|products|products/workmate|case-studies|services|why-queue)",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i).*(bot|crawler|spider|bing|google|duckduckbot|baidu|yandex|facebookexternalhit|twitterbot|linkedinbot|embedly|quora|slackbot|vkshare|w3c_validator|redditbot|applebot|whatsapp|telegrambot|googlebot|gptbot|perplexity|claudebot|anthropic-ai|ccbot).*"
        }
      ],
      "destination": "/prerender/$1/index.html"
    },
    {
      "source": "/(.*)",
      "missing": [
        {
          "type": "filesystem",
          "value": "/$1"
        }
      ],
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 